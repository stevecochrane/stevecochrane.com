			section#rise-of-the-necromancer
				div
					h1 Diablo III: Rise of the Necromancer Website
					.images
						.image.image-full
							img(
								src="img/rise-of-the-necromancer-1.jpg",
								srcset="img/rise-of-the-necromancer-1.jpg 1x, img/rise-of-the-necromancer-1-2x.jpg 2x",
								width="1280",
								height="882",
