						.image.image-half: img.lazy(data-src="img/vidcaster-video-player-2.jpg", width="528", height="297", alt="Vidcaster Default player theme with Resolutions menu open")
						.image.image-full: img.lazy(data-src="img/vidcaster-video-player-3.jpg", width="1080", height="492", alt="Interactive transcript and captioning functionality")
					noscript
